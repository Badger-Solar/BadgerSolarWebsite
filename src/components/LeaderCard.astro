---
const { name, email, role, imageURL } = Astro.props;
---

<div class="member">
  <img src={imageURL} alt="Team Member" />
  <h2>{name}</h2>
  <h3>{role}</h3>
  <a href=`mailto:${email}`>{email}</a>
</div>

<style>
  .img {
    padding: 10px;
  }
  .member {
    background: rgba(0, 0, 0, 0.3);
    padding: 10px;
    margin-right: 10px;
    margin-bottom: 10px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    text-align: center;
    width: clamp(8rem, 40vw, 20rem);
    justify-content: center;
    align-items: center;
  }
  .member img {
    width: 80%;
    height: auto;
    border-radius: 50%;
    object-fit: cover;
  }

  .member h2 {
    margin: 10px 0 5px;
    font-size: clamp(1.2rem, 3vw, 2.2rem);
  }

  .member h3 {
    margin: 10px 0 5px;
    font-size: clamp(1rem, 2vw, 2rem);
  }

  .member a {
    position: relative;
    margin: 10px 0 5px;
    font-size: clamp(0.8rem, 1.5vw, 1.5rem);
  }

  .member a::after {
    content: " ";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background: #fff;
    transform: scaleX(0);
    transition: transform 0.5s cubic-bezier(0.77, 0, 0.175, 1);
  }

  .member a:hover::after {
    transform: scaleX(1);
    transition: transform 0.5s;
  }

  /* .member:hover {
        transform: scale(1.05);
    } */
</style>
