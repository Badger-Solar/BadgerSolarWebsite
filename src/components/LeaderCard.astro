---
const { name, email, role, imageURL } = Astro.props;
---

<div class="member">
    <img src={imageURL} alt="Team Member" />
    <p>{name}</p>
    <p>{email}</p>
    <p>{role}</p>
</div>

<style>
    .img {
        padding: 10px;
    }
    .member {
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
        max-width: 200px;
    }
</style>
