---
const { name, email, role, imageURL } = Astro.props;
---

<div class="member">
    <img src={imageURL} alt="Team Member" />
    <p>{name}</p>
    <p>{email}</p>
    <p>{role}</p>
</div>

<style>
    .img {
        padding: 10px;
    }
    .member {
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
        max-width: 200px;
    }
    .member img {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
    }

    .member h3 {
        margin: 10px 0 5px;
        font-size: 1.2rem;
        color: #000;
    }

    .member p {
        font-size: 1rem;
        color: #555;
    }

    .member:hover {
        transform: scale(1.05);
    }
</style>
