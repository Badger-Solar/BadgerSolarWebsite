---
import Layout from "../layouts/Layout.astro";
import OneSponsorPage from "../components/OneSponsorPage.astro";
import { SponsorTiers, sponsorsByTier } from "../data/sponsorInfo";
---

<Layout title="Sponsors">
  {
    SponsorTiers.map(({ tier, color }) => (
      <OneSponsorPage
        tier={tier}
        color={color}
        sponsors={sponsorsByTier[tier]}
      />
    ))
  }
</Layout>

<style>
  /* General Reset */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  /* Main Section */
  .sponsors {
    /* padding: 60px 20px; */
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .animation-container {
    /* position: absolute; */
    /* width: 1000px;
    height: 500px; */
  }

  svg {
    display: block; /* Makes <svg> behave like a block element */
    margin: 0 auto; /* Horizontally center it (if a fixed width is set) */
    width: 650px; /* You can change this to any size you like */
    height: auto; /* Maintain aspect ratio */
    /* or you could do max-width: 100% for responsiveness */
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 40px;
  }

  h2 {
    font-size: 1.5rem;
    color: #fff;
    text-transform: uppercase;
  }

  /* Sponsor Blocks */

  .sponsor-block h2 {
    margin-bottom: 20px;
  }

  /* .sponsor-block:hover {
    transform: scale(1.05);
  } */

  /* Sponsor Images */

  #info-sponsors {
    position: absolute;
    top: 150px;
    left: 30px;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 15px;
    border-radius: 20px;
    background-color: rgb(60, 60, 60);
    border-color: white;
    border-width: 2px;
    border-style: solid;
    width: 30%;
  }

  #info-sponsors.hidden {
    display: none;
  }

  #sponsor-deep {
    position: absolute;
    top: 100px;
    right: 10px;
    padding: 15px;
    border-radius: 20px;
    background-color: rgb(60, 60, 60);
    border-color: white;
    border-width: 2px;
    border-style: solid;
    width: 40%;
    display: none;
  }

  #sponsor-deep.active {
    display: block;
  }

  #sponsor-category {
    padding-bottom: 20px;
  }

  #sponsor-body {
    display: flex;
    flex-direction: column;
    gap: 1rem;

    a {
      position: relative;
      font-size: 1.5rem;
    }

    a::after {
      content: " ";
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 1px;
      background: #fff;
      transform: scaleX(0);
      transition: transform 0.5s cubic-bezier(0.77, 0, 0.175, 1);
    }

    a:hover::after {
      transform: scaleX(1);
      transition: transform 0.5s;
    }

    p {
      font-size: 1rem;
    }
  }
  /* .sponsor-images img:hover {
    transform: scale(1.05);
  } */

  /* Mobile Responsiveness */
  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }

    .sponsor-block {
      padding: 20px;
    }

    .sponsor-images {
      gap: 20px;
    }

    .sponsor-images img {
      width: 120px;
    }
  }

  @media (max-width: 480px) {
    h1 {
      font-size: 1.5rem;
    }

    .sponsor-images img {
      width: 100px;
    }
  }
</style>
