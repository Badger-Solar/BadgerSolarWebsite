    }
  </section>

  <style>
    /* General Reset */
    * {
      /* margin: 0;
      padding: 0; */
    }

    .sponsors {
      display: flex;
      flex-direction: column;
      gap: 2rem;
      padding: clamp(1rem, 12vh, 20rem) clamp(1rem, 12vw, 20rem);
      justify-content: center;
    }

    .sponsor-group {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .sponsor-group h2 {
      font-size: clamp(2rem, 4vw, 4rem);
    }

    .sponsor-grid {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
    }

    .sponsor-card {
      padding: clamp(10px, 2vw, 25px);
      background-color: rgb(60, 60, 60);
      border-radius: clamp(10px, 2vw, 25px);
    }

    .sponsor-grid img {
      /* width: 300px; */
      height: clamp(2rem, 6vw, 5rem);
    }

