---

<Layout title="Sponsors">
  <section class="sponsors varsity">
    {
      ranks.slice(0, 2).map((tier) => {
        const sponsorsInTier = tiers.filter((s) => s.rank === tier);
        return (
          <div class="sponsor-group">
            <h2>{tier} Sponsors</h2>
            <div class="sponsor-grid">
              {sponsorsInTier.map((sponsor) => (
                <a href={sponsor.link} target="_blank" class="sponsor-card">
                  <img src={sponsor.logo.src} alt={`${sponsor.name} logo`} />
                </a>
              ))}
            </div>
          </div>
        );
      })
    }
  </section>
  <section class="sponsors silver">
    {
      ranks.slice(2, 3).map((tier) => {
