---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact Us">
  <section class="contact">
    <h2>Contact Us</h2>
    <p>Have questions or want to get in touch? Fill out the form below!</p>
    <div class="formToggle">
      <h3 class="slideName" id="joinButton">Join the Team</h3>
      <h3 class="slideName" id="sponsorButton">Become a Sponsor</h3>
    </div>
    <form id="contactFormTeams" action="#" method="post">
      <div id="companyInput" class="form-group hidden">
        <label for="company">Company</label>
        <input type="text" id="company" name="company" />
      </div>

      <div id="companyWebsiteInput" class="form-group hidden">
        <label for="company-website">Company Website</label>
        <input type="text" id="company-website" name="company-website" />
      </div>

      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" id="name" name="name" />
      </div>

      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" required />
      </div>

      <div class="form-group">
        <label for="message">Message</label>
        <textarea id="message" name="message" rows="5"></textarea>
      </div>

      <button type="submit">Send Message</button>
      <div class="loader" id="loader"></div>
      <p id="statusMessage"></p>
    </form>
  </section>
  <script src="/js/contactForm.js" defer></script>
</Layout>

<style>
  .contact {
    text-align: center;
    padding-top: clamp(4rem, 10vw, 5rem);
    /* padding-bottom: clamp(1rem, 10vw, 5rem); */
    padding-left: clamp(1rem, 10vw, 5rem);
    padding-right: clamp(1rem, 10vw, 5rem);
    background-image:
      linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.1)),
      url("/src/assets/car_imgs/blurry_speed.jpg");
    background-size: cover;
    background-position: center;
  }

  .contact h2 {
    font-size: clamp(2rem, 3vw, 4rem);
    margin-bottom: 1rem;
  }

  .slideName {
    width: 50%;
    font-size: clamp(1rem, 1.3vw, 2rem);
    padding: 10px 0 10px 0;
    border-radius: 10px;
    cursor: pointer;
  }

  .slideName.active {
    background-color: rgba(0, 0, 0, 0.4);
  }

  .contact p {
    font-size: clamp(0.9rem, 1vw, 1.5rem);
    color: #ccc;
  }

  .formToggle {
    max-width: clamp(15rem, 80vw, 25rem);
    margin: 1.5rem auto 1.5rem auto;
    /* padding: 10px; */
    background-color: rgba(0, 0, 0, 0.2);
    border-radius: 10px;
    display: flex;
    justify-content: space-between;
  }

  form {
    width: clamp(15rem, 80vw, 25rem);
    margin: 20px auto;
    padding: 20px;
    background: rgba(34, 34, 34, 0.4);
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(255, 255, 255, 0.1);
  }
  .form-group {
    margin-bottom: clamp(0.5rem, 1vw, 1rem);
    text-align: left;
  }

  .form-group.hidden {
    display: none;
  }

  .form-group label {
    font-size: clamp(1rem, 2vw, 1.2rem);
    display: block;
    font-weight: bold;
    margin-bottom: 5px;
    color: #fff;
  }

  .form-group input,
  .form-group textarea {
    width: 100%;
    padding: 10px;
    border: 1px solid #555;
    border-radius: 5px;
    font-size: 1rem;
    background: rgba(51, 51, 51, 0.5);
    color: #fff;
    resize: none;
  }

  .form-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    padding: 10px;
    background-color: rgba(0, 0, 0, 0.8);
  }

  button {
    display: inline-block;
    padding: 10px 20px;
    background: #c5050c;
    color: white;
    border: none;
    border-radius: 5px;
    font-size: 1rem;
    cursor: pointer;
    font-weight: bold;
  }

  button:hover {
    background: #0056b3;
  }

  /* use for the spinning loading annimation (from chat) */
  .loader {
    border: 6px solid #f3f3f3; /* Light grey */
    border-top: 6px solid #3498db; /* Blue */
    border-radius: 50%;
    width: 50px;
    height: 50px;
    animation: spin 1s linear infinite;
    display: none; /* Hide by default */
    margin: 20px auto;
  }

  #statusMessage {
    padding: 10px;
  }

  @keyframes spin {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }
</style>
